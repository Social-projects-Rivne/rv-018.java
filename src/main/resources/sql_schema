# the script to create test table manually
# not in use by the app
# delete in the future
CREATE TABLE IF NOT EXISTS greentourism.`user_detail` (
  `id` INT(11) NOT NULL AUTO_INCREMENT,
  `login` VARCHAR(45) NULL DEFAULT NULL,
  `password` VARCHAR(45) NULL DEFAULT NULL,
  `is_active` BIT(1) NULL DEFAULT b'1',
  `email` VARCHAR(45) NULL DEFAULT NULL,
  `first_name` VARCHAR(45) NULL DEFAULT NULL,
  `last_name` VARCHAR(45) NULL DEFAULT NULL
  PRIMARY KEY (`id`))
  ENGINE = InnoDB
  AUTO_INCREMENT = 7
  DEFAULT CHARACTER SET = utf8;

  # fill table query
  insert into user_detail (id, login, password, is_active, email, first_name, last_name) 
